<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LeftPanelTheme" parent="@android:style/Widget.ListView">
        <item name="android:background">#FF6666</item>
        <item name="android:divider">#FFFFFF</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:focusable">true</item>
    </style>
    
    <style name="LeftPanelItemTheme" parent="@android:style/Widget.TextView">
        <item name="android:background">#FF8888</item>
        <item name="android:gravity">left</item>
